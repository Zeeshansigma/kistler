<section class="section section--photo-gallery section--photo-gallery--{{ block.id }}
  {% if block.settings.full_width %}section--photo-gallery--full-width{% endif %}
  {% unless block.settings.top_padding %}section--photo-gallery--no-top-padding{% endunless %}
  {% unless block.settings.bottom_padding %}section--photo-gallery--no-bottom-padding{% endunless %}" 
  {{ block.shopify_attributes }}>
  <style>
    {%- if block.settings.bkgd_color -%}
      .section--photo-gallery--{{ block.id }} { 
        background-color: {{ block.settings.bkgd_color }}; 
      }
    {%- endif -%}

    {%- if block.settings.text_color -%}
      .section--photo-gallery--{{ block.id }} .section--photo-gallery-title,
      .section--photo-gallery--{{ block.id }} .gallery-imgs { 
        color: {{ block.settings.text_color }}; 
      }
    {%- endif -%}
  </style>

  <div class="container">
    {%- if block.settings.title != blank -%}
      <h2 class="section--photo-gallery-title">{{ block.settings.title }}</h2>
    {%- endif -%}

    <div class="row row--gutters gallery-imgs">
      {%- if block.settings.show_image_1 -%}
        {%- if block.settings.image_1 != blank -%}
          <div class="column gallery-img gallery-img--1">
            <img 
              src="{{ block.settings.image_1 | img_url: '400x' }}" 
              alt="{{ block.settings.image_1.alt }}"
              loading="lazy"
              width="400"
              height="{{ 400 | divided_by: block.settings.image_1.aspect_ratio }}" />
          </div>
        {%- else -%}
          <div class="column gallery-img gallery-img--1 gallery-img--placeholder">
            {{ 'image' | placeholder_svg_tag }}
          </div>
