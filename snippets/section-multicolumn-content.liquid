<section class="section section--multicolumn multicolumn-content--{{ block.id }}
  {% if block.settings.full_width %}section--multicolumn--full-width{% endif %}
  {% unless block.settings.top_padding %}section--multicolumn--no-top-padding{% endunless %}
  {% unless block.settings.bottom_padding %}section--multicolumn--no-bottom-padding{% endunless %}" 
  {{ block.shopify_attributes }}>
  <style>
    {% if block.settings.bkgd_color %}
      .multicolumn-content--{{ block.id }} { 
        background-color: {{ block.settings.bkgd_color }}; 
      }
    {% endif %}

    {% if block.settings.text_color %}
      .multicolumn-content--{{ block.id }} .multicolumn-title,
      .multicolumn-content--{{ block.id }} .multicolumn-content { 
        color: {{ block.settings.text_color }}; 
      }
    {% endif %}
  </style>

  <div class="container">
    {% if block.settings.title != blank %}
      <h2 class="section--multicolumn-title">{{ block.settings.title }}</h2>
    {% endif %}

    <div class="multicolumn-wrap">
      {% if block.settings.show_column_1 %}
        <div class="multicolumn multicolumn-1">
          {% if block.settings.image_1 %}
            <img class="multicolumn-image" src="{{ block.settings.image_1 | img_url: '400x' }}" alt="{{ block.settings.image_1.alt }}" />
          {% endif %}

          {% if block.settings.title_1 %}
            <h3 class="multicolumn-title">{{ block.settings.title_1 }}</h3>
          {% endif %}

          {% if block.settings.content_1 %}
            <div class="multicolumn-content">{{ block.settings.content_1 }}</div>
          {% endif %}

          {% if block.settings.btn_url_1 != blank and block.settings.btn_text_1 != blank %}
            <a href="{{ block.settings.btn_url_1 }}" class="multicolumn-btn btn {{ block.settings.btn_style_1 }}">{{ block.settings.btn_text_1 }}</a>
          {% endif %}
        </div>
      {% endif %}
      {% if block.settings.show_column_2 %}
        <div class="multicolumn multicolumn-2">
          {% if block.settings.image_2 %}
            <img class="multicolumn-image" src="{{ block.settings.image_2 | img_url: '400x' }}" alt="{{ block.settings.image_2.alt }}" />
          {% endif %}

          {% if block.settings.title_2 %}
            <h3 class="multicolumn-title">{{ block.settings.title_2 }}</h3>
          {% endif %}

          {% if block.settings.content_2 %}
            <div class="multicolumn-content">{{ block.settings.content_2 }}</div>
          {% endif %}

          {% if block.settings.btn_url_2 != blank and block.settings.btn_text_2 != blank %}
            <a href="{{ block.settings.btn_url_2 }}" class="multicolumn-btn btn {{ block.settings.btn_style_2 }}">{{ block.settings.btn_text_2 }}</a>
          {% endif %}
        </div>
      {% endif %}
      {% if block.settings.show_column_3 %}
        <div class="multicolumn multicolumn-3">
          {% if block.settings.image_3 %}
            <img class="multicolumn-image" src="{{ block.settings.image_3 | img_url: '400x' }}" alt="{{ block.settings.image_3.alt }}" />
          {% endif %}

          {% if block.settings.title_3 %}
            <h3 class="multicolumn-title">{{ block.settings.title_3 }}</h3>
          {% endif %}

          {% if block.settings.content_3 %}
            <div class="multicolumn-content">{{ block.settings.content_3 }}</div>
          {% endif %}

          {% if block.settings.btn_url_3 != blank and block.settings.btn_text_3 != blank %}
            <a href="{{ block.settings.btn_url_3 }}" class="multicolumn-btn btn {{ block.settings.btn_style_3 }}">{{ block.settings.btn_text_3 }}</a>
          {% endif %}
        </div>
      {% endif %}
      {% if block.settings.show_column_4 %}
        <div class="multicolumn multicolumn-4">
          {% if block.settings.image_4 %}
            <img class="multicolumn-image" src="{{ block.settings.image_4 | img_url: '400x' }}" alt="{{ block.settings.image_4.alt }}" />
          {% endif %}

          {% if block.settings.title_4 %}
            <h3 class="multicolumn-title">{{ block.settings.title_4 }}</h3>
          {% endif %}

          {% if block.settings.content_4 %}
            <div class="multicolumn-content">{{ block.settings.content_4 }}</div>
          {% endif %}

          {% if block.settings.btn_url_4 != blank and block.settings.btn_text_4 != blank %}
            <a href="{{ block.settings.btn_url_4 }}" class="multicolumn-btn btn {{ block.settings.btn_style_4 }}">{{ block.settings.btn_text_4 }}</a>
          {% endif %}
        </div>
      {% endif %}
      {% if block.settings.show_column_5 %}
        <div class="multicolumn multicolumn-5">
          {% if block.settings.image_5 %}
            <img class="multicolumn-image" src="{{ block.settings.image_5 | img_url: '400x' }}" alt="{{ block.settings.image_5.alt }}" />
          {% endif %}

          {% if block.settings.title_5 %}
            <h3 class="multicolumn-title">{{ block.settings.title_5 }}</h3>
          {% endif %}

          {% if block.settings.content_5 %}
            <div class="multicolumn-content">{{ block.settings.content_5 }}</div>
          {% endif %}

          {% if block.settings.btn_url_5 != blank and block.settings.btn_text_5 != blank %}
            <a href="{{ block.settings.btn_url_5 }}" class="multicolumn-btn btn {{ block.settings.btn_style_5 }}">{{ block.settings.btn_text_5 }}</a>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</section>