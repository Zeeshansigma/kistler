<section class="section section--html-content">
  <div class="section-content{% unless block.settings.fullwidth %} container--slim{% endunless %}{%if block.settings.padding_top %} section-content--padding-top{%endif%}{%if block.settings.padding_bottom %} section-content--padding-bottom{%endif%}{%if block.settings.border_top %} section-content--border-top{%endif%}{%if block.settings.border_bottom %} section-content--border-bottom{%endif%}">
    {% if block.settings.title != blank %}
      <header class="section-header">
        <h2>{{block.settings.title}}</h2>
        {% if block.settings.subheading != blank %}{{block.settings.subheading}}{% endif %}
      </header>
    {% endif %}
    {{ block.settings.html_content }}
  </div>
</section>