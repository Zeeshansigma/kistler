<section class="section section--faq faq faq--{{ section.id }}" {{ section.shopify_attributes }}>
  <div class="section-content">
    <h2 class="faq__section-heading">{{section.settings.section_heading}}</h2>
    <div class="faq-items container">
      {% for block in section.blocks %}
        <div class="faq-item" {{ block.shopify_attributes }}>
          <h3 class="faq-item__title">
            <span class="faq-item__title-toggle-icon">&plus;</span>
            {{ block.settings.title }}
          </h3>
          <div class="faq-item__content">
            {{ block.settings.content }}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Assembly FAQs",
    "settings":[
      {
        "type":"text",
        "id":"section_heading",
        "label":"Section Heading"
      }
    ],
    "blocks": [
      {
        "type":"faq",
        "name":"FAQ",
        "settings":[
          {
            "type":"text",
            "id":"title",
            "label":"Question"
          },
          {
            "type":"richtext",
            "id":"content",
            "label":"Answer"
          }
        ]
      }
    ]
  }
{% endschema %}
