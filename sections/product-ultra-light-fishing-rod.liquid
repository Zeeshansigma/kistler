{% for block in section.blocks %}
  {% case block.type %}
    {% when "content-grid" %}
      {% include "section-content-grid" %}
    {% when "featured-product" %}
      {% include "section-featured-product" %}
    {% when "hero" %}
      {% include "section-hero" %}
    {% when "html-content" %}
      {% include "section-html-content" %}
    {% when "product-listing" %}
      {% include "section-product-listing" %}
    {% when "rod-finder" %}
      {% include "section-rod-finder" %}
    {% when "video" %}
      {% include "section-video" %}
  {% endcase %}
{% endfor %}

{% schema %}
{
  "name": "Ultra Light",
  "blocks":[
    {
      "type":"content-grid",
      "name":"Content Grid",
      "settings": [
        {
          "type": "header",
          "content": "Section Settings"
        },
        {
          "type":"checkbox",
          "id":"padding",
          "label": "Add Padding?",
          "default":true
        },
        {
          "type": "header",
          "content": "Item #1 Settings"
        },
        {
          "type":"image_picker",
          "id":"image_1",
          "label":"Image",
          "info":"Image should be a jpeg, at least 1400px wide"
        },
        {
          "type":"text",
          "id":"preheading_1",
          "label":"Preheading"
        },
        {
          "type":"text",
          "id":"title_1",
          "label":"Heading",
          "info":"Use a | (pipe) character to manually insert a line break"
        },
        {
          "type":"text",
          "id":"link_text_1",
          "label":"Button Text",
          "info":"Leave blank to hide button"
        },
        {
          "type":"url",
          "id":"link_url_1",
          "label":"Link URL"
        },
        {
          "type": "header",
          "content": "Item #2 Settings"
        },
        {
          "type":"image_picker",
          "id":"image_2",
          "label":"Image",
          "info":"Image should be a jpeg, at least 1400px wide"
        },
        {
          "type":"text",
          "id":"preheading_2",
          "label":"Preheading"
        },
        {
          "type":"text",
          "id":"title_2",
          "label":"Heading",
          "info":"Use a | (pipe) character to manually insert a line break"
        },
        {
          "type":"text",
          "id":"link_text_2",
          "label":"Button Text",
          "info":"Leave blank to hide button"
        },
        {
          "type":"url",
          "id":"link_url_2",
          "label":"Link URL"
        }
      ]
    },
    {
      "type":"featured-product",
      "name":"Featured Product",
      "settings": [
        {
          "type": "checkbox",
          "id": "padding",
          "label": "Add Padding?",
          "default": false
        },
        {
          "type": "color",
          "id": "bg_color",
          "label": "Background Color",
          "default": "#f9f9f9"
        },
        {
          "type":"product",
          "id":"product",
          "label":"Product"
        },
        {
          "type":"text",
          "id":"heading",
          "label":"Heading",
          "info":"Leave blank to use Product Title"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description",
          "info":"Leave blank to use Product Description"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info":"Leave blank to use Product Image"
        }
      ]
    },
    {
      "type":"hero",
      "name":"Hero",
      "settings": [
        {
          "type": "header",
          "content": "Section Settings"
        },
        {
          "type":"image_picker",
          "id":"image",
          "label":"Image",
          "info":"Image should be a jpeg, with dimensions of 3000x1560"
        },
        {
          "type":"image_picker",
          "id":"mobile_image",
          "label":"Mobile Image",
          "info":"Leave blank to use default image. Image should be a jpeg, with dimensions of 1200x1560"
        },
        {
          "type":"checkbox",
          "id":"header_offset",
          "label":"Offset image behind header?",
          "default":true
        },
        {
          "type":"select",
          "id":"text_position",
          "label":"Text Position",
          "options":[
            {"value":"top-left","label":"Top Left"},
            {"value":"top-center","label":"Top Center"},
            {"value":"top-right","label":"Top Right"},
            {"value":"center-left","label":"Center Left"},
            {"value":"center-center","label":"Center Center"},
            {"value":"center-right","label":"Center Right"},
            {"value":"bottom-left","label":"Bottom Left"},
            {"value":"bottom-center","label":"Bottom Center"},
            {"value":"bottom-right","label":"Bottom Right"}
          ],
          "default":"bottom-left"
        },
        {
          "type":"text",
          "id":"title",
          "label":"Hero Text",
          "info":"Insert a | (pipe) character for line break and alternate font"
        },
        {
          "type":"text",
          "id":"link_text",
          "label":"Link Text",
          "info":"Leave blank to hide link"
        },
        {
          "type":"url",
          "id":"link_url",
          "label":"Link URL"
        },
        {
          "type":"color",
          "id":"text_color",
          "label":"Text Color",
          "info":"Text Color as well as Header Text Color if Offset is chosen above",
          "default":"#f7f7f7"
        }
      ]
    },
    {
      "type":"html-content",
      "name":"HTML Content",
      "settings": [
        {
          "type": "header",
          "content": "Design Settings"
        },
        {
          "type":"color",
          "id":"bkgd_color",
          "label":"Background Color",
          "default":"#fff"
        },
        {
          "type":"color",
          "id":"text_color",
          "label":"Text Color",
          "default":"#1a1a1a"
        },
        {
          "type":"checkbox",
          "id":"full_width",
          "label":"Full Width?"
        },
        {
          "type": "header",
          "content": "Content Settings"
        },
        {
          "type":"text",
          "id":"title",
          "label":"Heading"
        },
        {
          "type":"richtext",
          "id":"content",
          "label":"Content"
        },
        {
          "type":"html",
          "id":"html_content",
          "label":"HTML Content"
        }
      ]
    },
    {
      "type":"product-listing",
      "name":"Product Listing",
      "settings": [
        {
          "type": "header",
          "content": "Section Settings"
        },
        {
          "type":"text",
          "id":"title",
          "label":"Heading"
        },
        {
          "type":"text",
          "id":"subheading",
          "label":"Subheading"
        },
        {
          "type":"text",
          "id":"button_text",
          "label":"Button Text",
          "info":"Leave blank to hide."
        },
        {
          "type":"url",
          "id":"button_url",
          "label":"Button URL"
        },
        {
          "type":"collection",
          "id":"collection",
          "label":"Collection"
        }
      ]
    },
    {
      "type":"rod-finder",
      "name":"Rod Finder",
      "settings": [
        {
          "type": "checkbox",
          "id": "padding",
          "label": "Add Padding?",
          "default": false
        },
        {
          "type":"text",
          "id":"title",
          "label":"Title"
        },
        {
          "type":"richtext",
          "id":"text",
          "label":"Text Content"
        },
        {
          "type":"collection",
          "id":"collection",
          "label":"Collection",
          "info":"Collection to direct to once a selection is made"
        }
      ]
    },
    {
      "type":"video",
      "name":"Video",
      "settings": [
        {
          "type": "checkbox",
          "id": "padding",
          "label": "Add Padding?",
          "default": false
        },
        {
          "type":"text",
          "id":"title",
          "label":"Heading"
        },
        {
          "type": "video_url",
          "id": "video_url",
          "label": "Video URL",
          "accept": ["vimeo", "youtube"]
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Placeholder Image"
        },
        {
          "type":"color",
          "id":"bg_overlay_color",
          "label":"Background Overlay Color"
        }
      ]
    }
  ]
}
{% endschema %}
