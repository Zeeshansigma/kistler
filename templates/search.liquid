{% assign search_terms = search.terms | handle | upcase %}
<main class="content content--no-sidebar" role="main">
  <div class="container--full">
    {% include 'page-utility' %}
    <div class="page-main">
      <div class="page-header">
        <h1>Search</h1>
      </div>
      <style>
        
        .search-template .container--full {background: #f9f9f9;overlfow-x:hidden!important;}
        .search-template .page-content {min-height:40rem;}
        li.ais-facet--item, li.ais-Hits-item,.ais-page li {list-style: none;}
        button.ais-SearchBox-submit {display:none!important;}
        .ais-page .ais-results-as-block .ais-hit {padding: 1rem !important;border: none !important;background: #fff !important;box-shadow: 0 0 4px #efefef !important;}
        .ais-results-size-lg .ais-page .ais-results-as-block .ais-hit {width: 32% !important;margin-left: 1% !important;}
        .ais-results-size-sm .ais-page .ais-results-as-block .ais-hit,
        .ais-results-size-md .ais-page .ais-results-as-block .ais-hit {width: 48% !important;margin-left: 2% !important;}
        .ais-page .ais-facet--header,
        .ais-page .ais-facet {border: none !important;}
        .ais-page .ais-facet--header {font-family: "proxima-nova-extra-condensed","Avenir Next","Helvetica Neue",Helvetica,Arial,sans-serif;line-height: 1.2;font-size: 2rem !important;text-transform: uppercase!important;letter-spacing: 0.03em;margin-bottom: 0;color: #252a2b !important;font-weight: bold;}
        .ais-page .ais-current-refined-values--link {border: none !important;color: #252a2b !important;}
        .ais-page .product__image-wrapper {padding-top:75%}
        .ais-page .ais-results-as-block .ais-hit--details {margin:0!important;text-align: left;max-width:65% !important;}
        .ais-page .ais-hit--title,
        .ais-page .ais-hit--title a {color: #252a2b!important;display: block;font-size: 1.6rem!important;text-transform: none!important;font-family: "proxima-nova","Avenir Next","Helvetica Neue",Helvetica,Arial,sans-serif!important;font-weight: 700!important;margin-bottom: .8rem!important;border-bottom:none!important;}
        .ais-page .ais-hit--subtitle {font-weight: normal!important;font-size: 1.6rem!important;color: #615f66!important;margin-bottom: .8rem!important;}
        .ais-page .ais-hit--price {color: #252a2b!important;display: inline-block!important;font-size: 1.8rem!important;}
        .ais-page .ais-hit--picture {display:block!important;right:0!important;top:10px!important;width:100%!important;}

 
      </style>
      <div class="page-content" id="algolia-search-results">

      </div>
    </div>
  </div>
</main>
